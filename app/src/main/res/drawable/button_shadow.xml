<!-- res/drawable/button_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Capa de sombra -->
    <item android:left="4dp" android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- Sombra con color negro y transparencia -->
            <corners android:radius="8dp" /> <!-- Bordes redondeados para la sombra -->
        </shape>
    </item>

    <!-- Capa del botón -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color de fondo del botón -->
            <corners android:radius="8dp" /> <!-- Bordes redondeados para el botón -->
        </shape>
    </item>

</layer-list>


